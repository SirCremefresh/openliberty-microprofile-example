<?xml version="1.0" encoding="UTF-8"?>
<server description="new server">
    <featureManager>
        <feature>microProfile-2.0</feature>
        <feature>mongodb-2.0</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="9080"
                  httpsPort="9443" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <library id="mongodriver">
        <file name="${shared.resource.dir}/mongodb-driver.jar"/>
    </library>

    <mongo id="mongo" libraryRef="mongodriver">
        <ports>27017</ports>
        <hostNames>localhost</hostNames>
    </mongo>

    <mongoDB databaseName="openlibtest" jndiName="mongo/sampledb" mongoRef="mongo"/>

    <webApplication location="openliberty-microprofile-example.war">
        <classloader commonLibraryRef="mongodriver"/>
    </webApplication>

